@model sem3.Areas.Admin.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <link href="~/css/login.css" rel="stylesheet" />
</head>

<body>
    <div class="container col-lg-4 form-login">
            <p>@Html.Raw(ViewBag.error)</p>
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input name="urlRedirect" value="@ViewBag.urlRedirect" type="hidden" />
                <h2 class="title">Log In</h2>
                <div class="flex flex-col gap-3">
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" id="phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" id="password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn but">Login</button>
                    </div>
                    <p class="">
                        Don't have an Account? <a asp-action="Register" class="reg">Register</a>
                    </p>
                </div>
            </form>
        </div>
</body>

</html>

@using Microsoft.AspNetCore.Http

@{
    int userId = ViewContext.HttpContext.Session.GetInt32("UserId") ?? 0;

    string isLoggedIn = ViewContext.HttpContext.Session.GetString("IsLoggedIn");
    string controller = ViewContext.RouteData.Values["controller"]?.ToString();
    string action = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Untitled</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700">
    <link href="~/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <div>
            <div class="header-blue">
                <nav class="navbar navbar-dark navbar-expand-md navigation-clean-search">
                    <div class="container">
                        <div class="collapse navbar-collapse"
                             id="navcol-1">
                            <form class="form-inline mr-auto" target="_self">
                            </form><span class="navbar-text">
                                @if (!string.IsNullOrEmpty(isLoggedIn) && isLoggedIn.Equals("true", StringComparison.OrdinalIgnoreCase))
                                {
                                    <a asp-controller="Account" asp-action="Logout" class="login">Log Out</a>
                                }
                                else if (controller != "Account" && action != "Login")
                                {
                                    <a asp-controller="Account" asp-action="Login" class="login">Log In</a>
                                }
                            </span><a class="btn btn-light action-button" role="button" asp-controller="Account" asp-action="Register">Register</a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    <!-- menu -->
    <!-- Navbar -->
    <nav id="navbar">
        <ul class="navbar-items flexbox-col">
            <li class="navbar-logo flexbox-left">
                <a class="navbar-item-inner flexbox">
                    <svg xmlns="http://www.w3.org/2000/svg" id="Layer_1" data-name="Layer 1" viewBox="0 0 1438.88 1819.54">
                        <polygon points="925.79 318.48 830.56 0 183.51 1384.12 510.41 1178.46 925.79 318.48" />
                        <polygon points="1438.88 1663.28 1126.35 948.08 111.98 1586.26 0 1819.54 1020.91 1250.57 1123.78 1471.02 783.64 1663.28 1438.88 1663.28" />
                    </svg>
                </a>
            </li>
            <li class="navbar-item flexbox-left">
                <a class="navbar-item-inner flexbox-left" asp-controller="Home" asp-action="Index">
                    <div class="navbar-item-inner-icon-wrapper flexbox" style="color: #fff;">
                        <i class="bi bi-house"></i>
                    </div>
                    <span class="link-text">Home</span>
                </a>
            </li>
            <li class="navbar-item flexbox-left">
                <a class="navbar-item-inner flexbox-left" asp-controller="Wallet" asp-action="Index">
                    <div class="navbar-item-inner-icon-wrapper flexbox" style="color: #fff;">
                        <i class="bi bi-cash-coin"></i>
                    </div>
                    <span class="link-text"> Online Recharge</span>
                </a>
            </li>
            <li class="navbar-item flexbox-left">
                <a class="navbar-item-inner flexbox-left" asp-controller="UserDetail" asp-action="Index" asp-route-id="@userId">
                    <div class="navbar-item-inner-icon-wrapper flexbox" style="color: #fff;">
                        <i class="bi bi-person-circle"></i>
                    </div>
                    <span class="link-text">My Account</span>
                </a>
            </li>
            <li class="navbar-item flexbox-left">
                <a class="navbar-item-inner flexbox-left" asp-action="Bill" asp-controller="Home">
                    <div class="navbar-item-inner-icon-wrapper flexbox" style="color: #fff;">
                        <i class="bi bi-credit-card-2-back-fill"></i>
                    </div>
                    <span class="link-text">Post Bill Payment</span>
                </a>
            </li>
            <li class="navbar-item flexbox-left">
                <a asp-controller="Home" asp-action="About" class="navbar-item-inner flexbox-left">
                    <div class="navbar-item-inner-icon-wrapper flexbox" style="color: #fff;">
                        <i class="bi bi-bookmark"></i>
                    </div>
                    <span class="link-text">About Us</span>
                </a>
            </li>
            <li class="navbar-item flexbox-left">
                <a class="navbar-item-inner flexbox-left" asp-action="Contact">
                    <div class="navbar-item-inner-icon-wrapper flexbox" style="color: #fff;">
                        <i class="bi bi-telephone"></i>
                    </div>
                    <span class="link-text">Contact Us</span>
                </a>
            </li>
            <li class="navbar-item flexbox-left">
                <a class="navbar-item-inner flexbox-left" asp-action="Help">
                    <div class="navbar-item-inner-icon-wrapper flexbox" style="color: #fff;">
                        <i class="bi bi-headset"></i>
                    </div>
                    <span class="link-text">Customer Care</span>
                </a>
            </li>
        </ul>
    </nav>
    <!-- end menu -->
    <!-- end Navbar -->
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Online.Mobile.Recharge - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
